{
  "manifest_version": 3,
  "name": "Kimai Timesheet Bridge",
  "description": "Allow access to a Kimai timesheet server",
  "version": "0.0.2",
  "homepage_url": "https://www.neontribe.co.uk",

  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon-16x16.png",
      "32": "images/icon-32x32.png",
      "48": "images/icon-48x48.png",
      "128": "images/icon-128x128.png"
    }
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "icons": {
    "16": "images/icon-16x16.png",
    "32": "images/icon-32x32.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png"
  },

  "options_page": "html/options.html"
}
